{
  "name": "portal",
  "private": true,
  "scripts": {
    "start": "meteor",
    "lint": "eslint .",
    "flow": "flow",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "pretest": "npm run lint --silent",
    "testrpc": "testrpc --port=8547",
    "deploy:webfront": "DEPLOY_HOSTNAME=eu-west-1.galaxy-deploy.meteor.com meteor deploy portal.melonport.com --owner melonproject --settings ./settings/webfront.json",
    "deploy:sync": "DEPLOY_HOSTNAME=eu-west-1.galaxy-deploy.meteor.com meteor deploy melon-sync.eu.meteorapp.com --owner melonproject --settings ./settings/blockchain-sync.json",
    "deploy:stage": "DEPLOY_HOSTNAME=eu-west-1.galaxy-deploy.meteor.com meteor deploy staging.melonport.com --owner melonproject --settings ./settings/stage.json",
    "test:chimp:watch": "chimp --ddp=http://localhost:3000 --watch --mocha --path=tests",
    "test:chimp:once": "chimp --ddp=http://localhost:3000 --mocha --path=tests",
    "format": "prettier-eslint --write \"imports/**/*.js\""
  },
  "eslintConfig": {
    "env": {
      "meteor": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "extends": "@meteorjs/eslint-config-meteor"
  },
  "babel": {
    "presets": [
      "flow",
      "meteor",
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "@melonproject/protocol": "0.1.2",
    "async": "^2.1.4",
    "babel-runtime": "^6.23.0",
    "bootstrap-switch": "^3.3.3",
    "cryptocompare": "^0.1.0",
    "jquery": "^3.1.1",
    "meteor-node-stubs": "~0.2.0",
    "moment": "^2.18.1",
    "pify": "^3.0.0",
    "redux": "^3.6.0",
    "select2": "^4.0.3",
    "truffle-contract": "^2.0.1",
    "web3": "^0.18.4"
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-meteor": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "chimp": "^0.48.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.10.3",
    "ethereumjs-testrpc": "^3.0.5",
    "flow-bin": "^0.47.0",
    "jest": "^20.0.4",
    "prettier-eslint-cli": "^4.1.1"
  }
}
